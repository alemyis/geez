<div>
	<div class='misaleheader' misale='<%= misale.head %>'>
		<div class='itemid'>#<%= misale.id %></div>
		<div class='itemContent'>
			<div class='tweetThisContent'>
				<%= render :partial => 'misales/tweetThisContent', :locals => { :misale => misale } %>
			</div>
			<div class='geeztext headtext'><%= misale.head %></div>
			<div class='fetan tailtext <%= @fetan ? "" : "hidden" %>' misale='<%= misale.head %>' onclick='javascript:revealMisale(this)'>_______???______</div>
			<div class='geeztext tailtext <%= @fetan ? "hidden" : "" %>'><%= misale.tail %></div>
			<div class='contentActionLinks'>
				<%= link_to ApplicationHelper.get_value(:link, :link), misale %>
				<%= link_to ApplicationHelper.get_value(:edit, :edit), edit_misale_path(misale) %>
				<span class="comment-count-bubble">
					<%= link_to misale.comments.count , misale %>
				  <span class="comment-count-bubble-arrow"></span>
				</span>
			</div>
		</div>
	</div>
	
	<div class='hidden'>
	  <b>Tag:</b>
	  <%= misale.tag %>
	  &nbsp;&nbsp;&nbsp;
	  <b>Ye:</b>
	  <%= misale.ye %>
	  &nbsp;&nbsp;&nbsp;
	  <b>Ne:</b>
	  <%= misale.ne %>
	</div>
	
	<% unless misale.illustration.empty? then %>
		<div>
		 	<img id='illustration' misale='<%= misale.head %>' class='<%= @fetan ? "hidden" : "" %>' src='<%= misale.illustration %>' alt='illustration'/>
		</div>
	<% end %>
	<div misale='<%= misale.head %>' class='<%= @fetan ? "hidden" : "" %>'>
		<% for categorization in misale.categorizations %>
			<u><%= ApplicationHelper.get_value(:responses, :responses)  %>:</u>
			<ol>
			<% for answer in categorization.answers %>
				<li><%= "[#{answer.contact.nickname}] #{answer.response}" %></li>
			<% end %>
			</ol>
		<% end %>
	</div>
	
</div>