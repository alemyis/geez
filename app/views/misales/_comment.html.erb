<div class='comments'>
	<p>
		<b>comments:</b>
	</p>
	
	<%= simple_form_for(misale) do |f| %>
		<% f.fields_for :comments do |builder| %>
			<% if builder.object.new_record? %>
				<p>
					<%= render 'contacts/contact', :f => builder %>
					<%= builder.hidden_field :contact_id %>
					<%= builder.input :comment %>
				</p>
			<% else %>
				<p>
					<%= builder.object.contact.nickname %>[<%= builder.object.created_at %>]
				</p>
				<p>
					<%= builder.object.comment %>
				</p>
			<% end %>
		<% end %>
	
		<div class="actions">
			<%= f.button :submit, :value => 'submit' %>
		</div>
	<% end %>
</div>