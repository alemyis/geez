<p id="notice"><%= notice %></p>

<%= render :partial => 'header', :locals => {:challenge => @challenge }%>

<p style='display:none;'>
	Tags: 
	<% for misale in @challenge.misales %>
		<%= misale.tag %>
	<% end %>	
</p>

<% if @challenge.status == 1 %>
	<%= render :partial => "active" %>
<% else %>
	<% for misale in @challenge.misales %>
		<p>
			<%= render :partial => "misales/minishow", :locals => { :misale => misale } %>
		</p>
	<% end %>	
<% end %>
<%= link_to 'Edit', edit_challenge_path(@challenge) %> |
<%= link_to 'Back', challenges_path %>
